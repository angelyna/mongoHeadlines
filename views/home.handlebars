<div class="container-fluid article-container">
    {{#each articles}} {{!--Show articles that are not saved here. Articles will vanish as they are saved --}} {{#unless saved}}
    <div class="panel panel-default">
        <div class="panel-heading article-panel">
            <h3>
                <a class="article-link" href="{{link}}">{{title}}</a>
                <a class="btn btn-success save article-save" data-id="{{_id}}">Save Article</a>
            </h3>
            <span class="article-summary">{{summary}}</span>
        </div>
        <div class="panel-body">
            <span class="article-category">Content Type: {{category}}</span>
            <span class="article-date">Published @ {{timeStamp}}</span>
        </div>
    </div>
    {{/unless}} {{/each}}
</div>